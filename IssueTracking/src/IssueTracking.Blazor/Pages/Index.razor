@page "/"
@using Volo.Abp.MultiTenancy
@inherits IssueTrackingComponentBase
@inject ICurrentTenant CurrentTenant
@inject AuthenticationStateProvider AuthenticationStateProvider
<div class="container">
    <div class="p-5 text-center">
        <Badge Color="Color.Success" class="mb-4">
            <h5 class="m-1"> <i class="fas fa-rocket"></i> Congratulations, <strong>IssueTracking</strong> is successfully running!</h5>
        </Badge>

        <h1>Domain Driven Design Workshop</h1>

        <p class="lead px-lg-5 mx-lg-5">@L["LongWelcomeMessage"] visit <a href="https://abp.io/" target="_blank">abp.io</a>.</p>

        @if ( !CurrentUser.IsAuthenticated )
        {
            <a class="btn btn-primary" href="/authentication/login">
                <i class="fa fa-sign-in-alt"></i> @L["Login"]
            </a>
        }
    </div>
</div>
